{
  "name": "twdesktop",
  "version": "1.0.0beta",
  "description": "TiddlyWiki Desktop App",
  "main": "app/main.js",
  "scripts": {
    "dev": "export NODE_ENV=development; electron app/main.js",
    "start": "electron app/main.js",
    "test": "mocha --recursive",
    "test:reports": "nyc --reporter lcov mocha --recursive --reporter xunit --reporter-options output=xunit.xml",
    "clean:linux": "rimraf dist/linux*",
    "clean:osx": "rimraf dist/mac",
    "clean:win": "rimraf dist/win*",
    "clean": "npm run clean:linux && npm run clean:win && npm run clean:osx",
    "pack:osx": "build --dir --mac",
    "pack:win": "build --dir --win --x64",
    "pack:linux": "build --dir --linux --x64",
    "pack": "build --dir",
    "build:osx": "build --mac; npm run clean",
    "build:wl": "build -wl --x64; npm run clean",
    "pre-build": "node node_modules/webpack/bin/webpack.js",
    "installdeps": "npm install --only=dev; cd app; npm install; cd .."
  },
  "keywords": [
    "wiki"
  ],
  "author": "pyriand3r <pyriand3r@gmail.com>",
  "license": "ISC",
  "dependencies": {},
  "build": {
    "appId": "com.scriptaholic.twdesktop",
    "productName": "TW Desktop",
    "mac": {
      "category": "public.app-category.utilities",
      "target": [
        "dmg"
      ]
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "linux": {
      "category": "Utility",
      "target": [
        "AppImage",
        "deb",
        "rpm",
        "snap",
        "tar.gz"
      ],
      "icon": "./build/linux_icons"
    },
    "win": {
      "target": [
        "nsis"
      ]
    }
  },
  "devDependencies": {
    "babel-core": "^6.24.1",
    "babel-loader": "^7.0.0",
    "babel-preset-es2015": "^6.24.1",
    "css-loader": "^0.28.4",
    "electron": "^1.6.6",
    "electron-builder": "^17.1.2",
    "file-loader": "^0.11.2",
    "mocha": "^3.4.2",
    "nyc": "^11.0.3",
    "sinon": "^2.3.8",
    "spectre.css": "^0.2.14",
    "style-loader": "^0.18.1",
    "vue": "^2.3.3",
    "vue-loader": "^12.2.1",
    "vue-template-compiler": "^2.3.3",
    "webpack": "^2.6.1"
  }
}
